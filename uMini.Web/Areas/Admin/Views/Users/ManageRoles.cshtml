@model ManageRolesViewModel
@{
    ViewData["Title"] = "Manage Roles";
}

<!-- Header -->
<div class="px-sm-5 py-4">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <!-- Title -->
            <div class="col">
                <h1 class="mb-0 h3">@ViewData["Title"]</h1> 
            </div>
        </div>
    </div>
</div>
<!-- Content -->
<div class="container-fluid px-sm-5">
    <div class="row">
        <div class="col-12">
            <!-- Card -->
            <div class="card mb-4 bg-white">
                <!-- Card Body -->
                <div class="card-body px-4">
                    @await Component.InvokeAsync("AdminDashboardUserCardHeader", Model.UserId)
                    <hr />
                    <div class="d-flex d-inline-block">
                        @await Component.InvokeAsync("ApplicationUserRoleChips", new { userId = Model.UserId, removeRoleModalButton = true, contextUser = User })
                        <div class="chip chip-outline btn-outline-light me-1 p-2">
                            <form method="post" asp-area="Admin" asp-controller="Users" asp-action="AddRole">
                                <input type="text" id="userId" name="userId" value="@Model.UserId" hidden />
                                <select class="form-select form-select-sm" id="role" name="role" asp-items="Model.AvailableRoles" onchange="this.form.submit();"></select>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("_RemoveRoleModal", Model.UserId)

@section Scripts {
    <script src="~/js/admin-users-manageroles.js"></script>
}