@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}
<partial name="_StatusMessage" for="@TempData["StatusMessage"]" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-5 col-md-8">
            <form 
                method="post" 
                asp-area="Identity" 
                asp-controller="Manage" 
                asp-action="ChangePassword" 
                class="text-center p-5"
                role="form"
            >
                <h1>@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger text-start"></div>
                <div class="form-floating">
                    <input 
                        asp-for="OldPassword" 
                        class="form-control mb-4" 
                        autocomplete="current-password" 
                        aria-required="true" 
                    />
                    <label asp-for="OldPassword" class="form-label mb-4"></label>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input 
                        asp-for="NewPassword" 
                        class="form-control mb-4" 
                        autocomplete="new-password" 
                        aria-required="true" 
                        />
                    <label asp-for="NewPassword" class="form-label mb-4"></label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input 
                        asp-for="ConfirmPassword" 
                        class="form-control mb-4" 
                        autocomplete="new-password" 
                        aria-required="true" 
                    />
                    <label asp-for="ConfirmPassword" class="form-label mb-4"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
            </form>
        </div>
    </div>
</div>
