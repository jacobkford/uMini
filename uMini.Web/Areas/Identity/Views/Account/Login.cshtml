@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="container h-100">
    <div class="row align-items-center h-100 justify-content-center">
        <div class="col-xl-6 col-md-8">
            <!-- Login Card -->
            <div class="card mb-4 bg-white">
                <!-- Login Card Title -->
                <div class="card-header">
                    <h1 class="card-title">@ViewData["Title"]</h1>
                </div>
                <!-- Login Card Form -->
                <div class="card-body">
                    <form 
                        method="post" 
                        asp-area="Identity" 
                        asp-controller="Account" 
                        asp-action="Login" 
                        class="text-center p-5"
                        role="form"
                    >
                        <div asp-validation-summary="ModelOnly" class="text-danger text-start"></div>
                        <div class="form-floating">
                            <input 
                                asp-for="Email" 
                                class="form-control mb-4" 
                                autocomplete="username" 
                                aria-required="true" 
                                />
                            <label asp-for="Email" class="form-label mb-4"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input 
                                asp-for="Password" 
                                class="form-control mb-4" 
                                autocomplete="current-password" 
                                aria-required="true" 
                            />
                            <label asp-for="Password" class="form-label mb-4"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-check mb-0">
                                <label asp-for="RememberMe" class="form-check-label">
                                    <input class="form-check-input me-2" asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>

                            </div>
                            <a class="text-body" asp-action="ForgotPassword">Forgot your password?</a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary btn-block my-4">Log in</button>
                        </div>
                        <div>
                            <p class="small fw-bold mt-2 pt-1 mb-0"> Don't have an account?
                                <a 
                                    asp-action="Register" 
                                    asp-route-returnUrl="@ViewData["ReturnUrl"]" 
                                    class="link-primary"
                                >Register</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
