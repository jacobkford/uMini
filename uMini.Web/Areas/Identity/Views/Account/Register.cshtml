@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container h-100">
    <div class="row align-items-center h-100 justify-content-center">
        <div class="col-xl-6 col-md-8">
            <!-- Register Card -->
            <div class="card mb-4 bg-white">
                <!-- Register Card Title -->
                <div class="card-header">
                    <h1 class="card-title">@ViewData["Title"]</h1>
                </div>
                <!-- Register Card Form -->
                <div class="card-body">
                    <form 
                        method="post" 
                        asp-area="Identity"
                        asp-controller="Account" 
                        asp-action="Register" 
                        asp-route-returnUrl="@ViewData["ReturnUrl"]" 
                        role="form" 
                        class="text-center p-5"
                    >
                        <div asp-validation-summary="ModelOnly" class="text-danger text-start"></div>
                        <div class="form-floating">
                            <input 
                                asp-for="Username"
                                class="form-control mb-4" 
                                autocomplete="off" 
                                aria-required="true" 
                            />
                            <label asp-for="Username" class="form-label mb-4"></label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input 
                                asp-for="Email" 
                                class="form-control mb-4" 
                                autocomplete="on" 
                                aria-required="true" 
                            />
                            <label asp-for="Email" class="form-label mb-4"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input 
                                asp-for="Password" 
                                class="form-control mb-4" 
                                autocomplete="new-password" 
                                aria-required="true" 
                            />
                            <label asp-for="Password" class="form-label mb-4"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input 
                                asp-for="ConfirmPassword" 
                                class="form-control mb-4"
                                autocomplete="new-password" 
                                aria-required="true" 
                            />
                            <label asp-for="ConfirmPassword" class="form-label mb-4"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

